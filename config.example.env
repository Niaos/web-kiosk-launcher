# Web Kiosk Launcher 配置文件示例
# 复制此文件为 .env 并根据需要修改

# ========================================
# 服务配置
# ========================================

# 监听地址 (127.0.0.1 仅本机访问，0.0.0.0 允许网络访问)
HOST=127.0.0.1

# 监听端口
PORT=8787

# ========================================
# 默认URL配置
# ========================================

# 默认打开的URL
DEFAULT_URL=https://example.org

# ========================================
# 浏览器配置
# ========================================

# 是否启用GPU加速 (ARM设备建议设为false)
ENABLE_GPU=false

# 是否复用相同URL的浏览器实例
REUSE_INSTANCE=true

# ========================================
# 安全配置
# ========================================

# 是否启用HTTP Basic Auth
BASIC_AUTH=false

# Basic Auth 用户名
BASIC_AUTH_USER=admin

# Basic Auth 密码
BASIC_AUTH_PASS=password

# URL白名单 (用逗号分隔，留空表示允许所有URL)
# 示例: ALLOW_LIST=example.com,google.com,github.com
ALLOW_LIST=

# ========================================
# 高级配置
# ========================================

# 浏览器启动超时时间（秒）
BROWSER_TIMEOUT=30

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 是否启用详细日志
VERBOSE_LOGGING=false

# ========================================
# 系统特定配置
# ========================================

# 显示环境变量 (通常不需要修改)
# DISPLAY=:0

# X11认证文件路径 (通常不需要修改)
# XAUTHORITY=/home/user/.Xauthority

# ========================================
# 示例配置
# ========================================

# 局域网访问配置示例：
# HOST=0.0.0.0
# BASIC_AUTH=true
# BASIC_AUTH_USER=admin
# BASIC_AUTH_PASS=your_secure_password

# 限制访问特定网站示例：
# ALLOW_LIST=example.com,google.com,github.com

# ARM设备优化示例：
# ENABLE_GPU=false
# BROWSER_TIMEOUT=60

# 开发调试配置示例：
# LOG_LEVEL=DEBUG
# VERBOSE_LOGGING=true